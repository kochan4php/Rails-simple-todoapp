<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-5 p-4" style="background-color: #bada;">
      <h2 class="text-center mb-4">What's plan today ?</h2>
      <%= link_to "Add Todo", new_todo_path, :class => "btn btn-primary w-100" %>
      <ul class="mt-3">
        <% @todos.each do |todo| %>
          <li class="fs-5"><%= todo.activity %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>