<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8 p-4 rounded" style="background-color: #bada;">
      <h3 class="text-center mb-4"><%= judul_halaman %></h3>
      <%= link_to aksi_halaman, new_todo_path, :class => "btn btn-primary w-100 mb-3" %>
      <% if notice %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= notice %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>
      <div class="mt-4">
        <% index = 1 %>
        <% @todos.each do |todo| %>
          <div class="alert alert-light text-dark d-flex justify-content-between" role="alert">
            <p class="my-2">
              <%= index %>. 
              <%= todo.activity %>  
              <% if todo.status != 1 %>
                (Selesai)
              <% else %>
                (Belum Selesai)
              <% end %>
            </p>
            <div class="d-flex">
              <%= link_to edit_todo_path(todo.id), :class => "btn" do %>
                <i class="bi bi-pencil-square fs-5 text-success"></i>
              <% end %>
              <%= button_to todo_path(todo.id), :method => 'delete', :onclick => "return confirm('Hapus kegiatan?');", :class => "btn" do %>
                <i class="bi bi-trash-fill fs-5 text-danger"></i>
              <% end %>
              <%= button_to set_status_todo_path(todo.id), :method => 'put', :class => "btn" do %>
                <% if todo.status != 1 %>
                  <i class="bi bi-check-square-fill fs-5 text-primary"></i>
                <% else %>
                  <i class="bi bi-square fs-5 text-primary"></i>
                <% end %>
              <% end %>
            </div>
          </div>
          <% index += 1 %>
        <% end %>
      </div>
    </div>
  </div>
</div>